<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".NewRequest">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bg"
            android:id="@+id/top">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/close"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                app:tint="#fff"
                android:id="@+id/close"/>

            <TextView
                android:fontFamily="@font/montserrat_extra_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit a Request"
                android:textColor="@color/grayLight"
                android:textSize="10pt"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/close"
                android:layout_marginStart="10pt"/>


        </RelativeLayout>


        <TextView
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:id="@+id/info_text"
            android:textSize="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Enter all the required details, along with estimated budget, and upload supporting formal document."
            android:layout_below="@id/top"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:id="@+id/text1"

            android:fontFamily="@font/montserrat_extra_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:layout_below="@id/info_text"
            android:textColor="#CCC"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="12dp"
            />

        <EditText
            android:drawableLeft="@drawable/baseline_edit_24"
            android:textSize="6pt"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:textColorHint="@color/gray"
            android:drawableTint="@color/white"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:layout_below="@id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:maxLength="100"
            android:id="@+id/post_title"/>

        <TextView
            android:id="@+id/text2"

            android:fontFamily="@font/montserrat_extra_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_below="@id/post_title"
            android:textColor="#CCC"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="12dp"
            />

        <EditText
            android:drawableLeft="@drawable/baseline_short_text_24"
            android:textSize="6pt"

            android:gravity="start"
            android:lines="5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:textColorHint="@color/gray"
            android:drawableTint="@color/white"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:layout_below="@id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Details"
            android:maxLength="100"
            android:id="@+id/post_content"/>


        <TextView
            android:id="@+id/text4"
            android:fontFamily="@font/montserrat_extra_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phase"
            android:layout_below="@id/post_content"
            android:textColor="#CCC"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="12dp"/>



        <LinearLayout
            android:layout_below="@id/text4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/steps">


            <TextView
                android:textSize="5pt"
                android:id="@+id/phase1"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Initial\nReport"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/edit_text_bg"
                />



            <TextView
                android:textSize="5pt"
                android:id="@+id/phase2"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comparative\nList"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/edit_text_bg"
                />


            <TextView
                android:textSize="5pt"
                android:id="@+id/phase3"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fund\nApproval"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/edit_text_bg"
                />


        </LinearLayout>

<!--        <EditText-->
<!--            android:drawableLeft="@drawable/baseline_label_24"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            android:textColor="@color/white"-->
<!--            android:fontFamily="@font/montserrat_medium"-->
<!--            android:textColorHint="@color/gray"-->
<!--            android:drawableTint="@color/white"-->
<!--            android:drawablePadding="10dp"-->
<!--            android:padding="10dp"-->
<!--            android:background="@drawable/edit_text_bg"-->
<!--            android:layout_below="@id/text4"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="6pt"-->
<!--            android:hint="Enter tags seperated by commas..."-->
<!--            android:maxLength="100"-->
<!--            android:id="@+id/tags"/>-->


        <TextView
            android:id="@+id/text5"
            android:fontFamily="@font/montserrat_extra_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:layout_below="@id/steps"
            android:textColor="#CCC"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="12dp"/>



        <LinearLayout
            android:layout_below="@id/text5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/priority">


            <TextView
                android:textSize="5pt"
                android:id="@+id/priority1"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Regular"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/edit_text_bg"
                />



            <TextView
                android:textSize="5pt"
                android:id="@+id/priority2"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Urgent"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/edit_text_bg"
                />


            <TextView
                android:textSize="5pt"
                android:id="@+id/priority3"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Immediate"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/edit_text_bg"
                />


        </LinearLayout>



        <TextView
            android:layout_below="@id/priority"
            android:id="@+id/uploadText"
            android:fontFamily="@font/montserrat_extra_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload File (if required)"
            android:textColor="#CCC"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="12dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1"
            android:layout_below="@id/uploadText"
            android:paddingTop="10dp">

        <ImageView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_upload_file_24"
            app:tint="@color/white"
            android:layout_marginStart="10dp"
            android:id="@+id/upload"/>

        <TextView
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_toRightOf="@id/upload"
            android:fontFamily="@font/montserrat_bold"
            android:id="@+id/fileName"/>


        </RelativeLayout>


        <Button
            android:fontFamily="@font/montserrat_extra_bold"
            android:backgroundTint="@color/primaryLight"
            android:id="@+id/submit"
            android:paddingTop="10pt"
            android:paddingBottom="10pt"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10pt"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/black" />


    </RelativeLayout>




</ScrollView>